{
  "name": "yakc",
  "version": "1.0.1",
  "icon": "./assets/icons/linux/icon.png",
  "description": "Yet Another Key Caster",
  "main": "./main.js",
  "scripts": {
    "start": "electron main.js",
    "package:mac": "electron-packager . YAKC --platform=darwin --arch=x64 --out=build/mac --icon=./assets/icons/mac/icon.ico",
    "package:windows": "electron-packager . YAKC --platform=win32 --arch=x64 --out=build/windows --icon=./assets/icons/windows/icon.ico",
    "package:linux": "electron-packager . YAKC --platform=linux --arch=x64 --out=build/linux --icon=./assets/icons/linux/icon.png",
    "package:all": "npm run package:mac && npm run package:win && npm run package:linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iammodev/YAKC.git"
  },
  "keywords": [
    "YAKC"
  ],
  "author": "IAMMODEV",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iammodev/YAKC/issues"
  },
  "homepage": "https://github.com/iammodev/YAKC#readme",
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@mechakeys/iohook": "^1.1.1",
    "electron": "^25.9.3",
    "keycode": "^2.2.1",
    "keycodemap": "^1.4.7",
    "node-abi": "^3.51.0"
  },
  "iohook": {
    "targets": [
      "node-108",
      "electron-116"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  }
}
